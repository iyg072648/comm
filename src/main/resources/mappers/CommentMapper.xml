<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.talk.comm.repository.CommentRepository">
    <sql id="commentColumns">
        id,
        board_id,
        content,
        writer,
        delete_yn,
        create_date,
        modified_date
    </sql>

<!--    댓글저장-->
    <insert id="save" parameterType="com.talk.comm.domain.comment.CommentRequest"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into board_comment(
            <include refid="commentColumns"></include>
        ) values (
            #{id},
            #{boardId},
            #{content},
            #{wrtier},
            0,
            now(),
            null
    </insert>

<!--    댓글 상세정보 조회-->
    <select id="findById" parameterType="long" resultType="com.talk.comm.domain.comment.CommentResponse">
        select
            <include refid="commentColumns"></include>
        from
            board_comment
        where
            id = #{value}
    </select>

    <update id="update" parameterType="com.talk.comm.domain.comment.CommentRequest">
        update board_comment
        set
            modified_date = now(),
            content = #{content},
            writer = #{writer}
        where
            id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        update board_comment
        set
            delete_yn = 1
        where
            id = #{id}
    </delete>

<!--    댓글 리스트 조회-->
    <select id="findAll" parameterType="long" resultType="com.talk.comm.domain.comment.CommentResponse">
        select
            <include refid="commentColumns"></include>
        from
            board_comment
        where
            delete_yn = 0
            and board_id = #{value}
        order by id desc
    </select>
</mapper>